{
  "name": "styleguide-kss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-task:kss": "kss --config kss-config.json",
    "build-task:scss-compile": "node-sass-chokidar --source-map true scss/ -o styleguide",
    "build-task:autoprefixer": "postcss styleguide/*.css --use autoprefixer -d styleguide",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'scss/**/*.scss' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*",
    "build": "npm run build-task:scss-compile && npm run build-task:autoprefixer && npm run build-task:kss && echo --COMPLETED âœ… --"
  },
  "author": "Mark Chambers",
  "license": "ISC",
  "devDependencies": {
    "kss": "^3.0.0-beta.20",
    "michelangelo": "^0.8.0"
  },
  "dependencies": {
    "autoprefixer": "^8.6.3",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1"
  }
}
